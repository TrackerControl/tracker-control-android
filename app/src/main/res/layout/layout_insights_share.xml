<?xml version="1.0" encoding="utf-8"?>
<!-- Layout used to generate a shareable PNG image with privacy insights -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorPrimary"
    android:padding="24dp">

    <!-- Header: TrackerControl branding -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_launcher_round"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Time period -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insights_subtitle_7days"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:alpha="0.85" />

    <!-- Hero stat: Total Hosts (Used to be blocked) -->
    <TextView
        android:id="@+id/tvShareTotalBlocked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvShareBlockedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insights_tracking_attempts"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Stats row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <!-- Trackers Blocked (Formerly Percent) -->
        <LinearLayout
            android:id="@+id/llShareBlockedStat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvShareBlockedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/insights_share_trackers_blocked"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:alpha="0.85" />

        </LinearLayout>

        <!-- Tracker companies -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvShareCompanies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/insights_tracker_companies"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:alpha="0.85" />

        </LinearLayout>

    </LinearLayout>
    
    <!-- Top Companies Section -->
    <LinearLayout
        android:id="@+id/llShareTopCompanies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:background="@drawable/bg_rounded_white_alpha">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insights_top_companies"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>
            
        <!-- Items added dynamically -->

    </LinearLayout>

    <!-- Footer: URL -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/insights_share_url"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="italic"
        android:gravity="center"
        android:alpha="0.9" />

</LinearLayout>
